# LinkedIn Credentials (Optional - for authenticated scraping)
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password

# Scraping Settings
MAX_JOBS_PER_SEARCH=100
DELAY_BETWEEN_REQUESTS=2

# API Configuration
APP_NAME=LinkedIn Job Scraper API
APP_VERSION=2.0.0
APP_DESCRIPTION=Advanced job scraper with automated scheduling, location priority, and Elasticsearch integration
HOST=0.0.0.0
PORT=8000
RELOAD=True
API_V1_PREFIX=/api/v1

# CORS (comma-separated or JSON array)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "*"]

# Elasticsearch Configuration
ELASTICSEARCH_ENABLED=True          # Set to False to disable Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http           # http or https
ELASTICSEARCH_USER=                 # Optional: username for authentication
ELASTICSEARCH_PASSWORD=             # Optional: password for authentication
ELASTICSEARCH_INDEX=linkedin_jobs   # Index name for storing jobs

# Scheduler Configuration
AUTO_START_SCHEDULER=False          # Set to True to auto-start scheduler on app startup
SCHEDULER_DAY=monday                # Day of week: monday, tuesday, wednesday, thursday, friday, saturday, sunday
SCHEDULER_TIME=09:00                # Time in HH:MM format (24-hour)

# Job Quality Settings
MAX_POST_AGE_DAYS=21               # Only scrape jobs posted within last N days
JOBS_PER_ROLE=20                   # Target number of jobs per role
EXACT_MATCH=True                   # Use exact keyword matching for relevance
FETCH_DETAILS=True                 # Fetch detailed job information

# Location Priority Settings
# Primary location: Jobs will be collected from this location first
PRIMARY_LOCATION=Sri Lanka
PRIMARY_COUNTRY_CODE=LK

# Fallback locations: If fewer than JOBS_PER_ROLE from primary, top-up from these (in order)
FALLBACK_LOCATIONS=United States,India,United Kingdom
FALLBACK_COUNTRY_CODES=US,IN,GB
